<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:layout_marginVertical="@dimen/appbar_padding_top"
        android:layout_marginHorizontal="@dimen/fab_margin"
        >

        <ImageView
            android:id="@+id/my_stat_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/images" />

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/price" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/home_address" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/room" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/floor" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_stat_prica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="90000$"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/my_stat_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Davitashen"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/my_stat_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/my_stat_floor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"

                android:textColor="@color/cardview_light_background" />

        </LinearLayout>



        <ImageView
            android:id="@+id/delete_my_stat"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="86dp"
            app:srcCompat="@drawable/delete" />





    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/fab_margin"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"/>


</LinearLayout>