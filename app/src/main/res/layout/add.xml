<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SearchActivity"
    android:background="@color/t">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="14dp"
                app:srcCompat="@drawable/coin" />

            <EditText
                android:id="@+id/price_edit"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:hint="$"
                android:textColorHint="@color/texthint"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="italic|bold" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="32dp"
                app:srcCompat="@drawable/rooms" />

            <Spinner
                android:id="@+id/room_spinner"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorPrimary"
                android:text="3" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="32dp"
                app:srcCompat="@drawable/floors" />

            <Spinner
                android:id="@+id/floor_spinner"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:text="12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/fab_margin"
            android:orientation="horizontal">



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/fab_margin"
                android:text="Location"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/location_spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fab_max_margin"

                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/fab_margin"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Category" />

            <Spinner
                android:id="@+id/category_spiner"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/appbar_padding_top"
                android:text="RENT"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Type" />

            <Spinner
                android:id="@+id/type_spiner"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/appbar_padding_top"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:text="APPARTEMENT" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/fab_margin"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/address_2" />

            <EditText
                android:id="@+id/address_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/appbar_padding_top"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/texthint"
                android:hint="Example: Amiryan 26" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/fab_margin"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/infos" />

            <EditText
                android:id="@+id/desc_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textColorHint="@color/texthint"
                android:layout_marginStart="@dimen/appbar_padding_top"
                android:layout_weight="1"
                android:lines="3"
                android:hint="@string/example" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"/>



        <LinearLayout
            android:id="@+id/statement_image_list"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/appbar_padding_top"
            android:layout_marginVertical="@dimen/fab_margin"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:layout_marginStart="@dimen/fab_margin"
                android:background="@drawable/images"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/add_images"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="32dp"
                    android:layout_marginStart="@dimen/fab_max_margin"
                    android:background="@drawable/add_images" />
                <ImageView
                    android:id="@+id/upload_images"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/fab_max_margin"
                    android:layout_marginVertical="33dp"
                    android:background="@drawable/upload_img" />

            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/save_statement_btn"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginVertical="16dp"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@drawable/save" />

    </LinearLayout>

</RelativeLayout>