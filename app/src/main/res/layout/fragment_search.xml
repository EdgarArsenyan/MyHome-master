<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.SearchFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="159dp"
        android:layout_marginTop="54dp"
        android:layout_marginHorizontal="@dimen/appbar_padding_top"
        android:background="@drawable/view_grey" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/appbar_padding_top"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/search_view"
            android:gravity="center_horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="By Location"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:text="By Category"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/loc_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fab_max_margin"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />


            <Spinner
                android:id="@+id/cat_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fab_max_margin"
                android:layout_weight="1"
                android:text="RENT"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel_btn"
                android:layout_width="139dp"
                android:layout_height="37dp"
                android:background="@drawable/cancel_button" />


            <ImageView
                android:id="@+id/ok_btn"
                android:layout_width="139dp"
                android:layout_height="37dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/ok_button" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>