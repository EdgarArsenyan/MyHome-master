<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".activity.EmailPasswordActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="250dp"
        android:layout_marginHorizontal="@dimen/fab_margin"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:padding="15dp"
            android:background="@drawable/email_shape"
            android:drawableLeft="@drawable/email_icon"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/texthint"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:hint="Email"
            />


        <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:padding="15dp"
            android:background="@drawable/email_shape"
            android:drawableLeft="@drawable/lock_icon"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="@color/texthint"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimaryDark"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_img_email_activity"
                android:layout_width="@dimen/button_wigth"
                android:layout_height="@dimen/button_heigth"
                android:layout_marginHorizontal="@dimen/fab_margin"
                android:layout_marginVertical="@dimen/fab_margin"
                android:layout_weight="1"
                android:background="@drawable/login_button" />

            <ImageView
                android:id="@+id/create_img_email_activity"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="@dimen/fab_margin"
                android:layout_marginVertical="@dimen/fab_margin"

                android:layout_weight="1"
                android:background="@drawable/create_button" />


        </LinearLayout>






    </LinearLayout>



</RelativeLayout>
